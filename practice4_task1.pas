program TabulateFunction;

var
  a, b, h, x: real;

begin
  // Ввод границ отрезка и шага
  writeln('Введите границы отрезка [a, b] и шаг h:');
  readln(a, b, h);

  // Вывод заголовка таблицы
  writeln('Аргумент | Значение функции');
  writeln('--------------------------');

  // Инициализация переменной x
  x := a;

  // Цикл табулирования функции
  repeat
    // Вывод значения аргумента и соответствующего значения функции
    writeln(x:8:2, '   |   ', sin(x):8:2);

    // Увеличиваем значение аргумента на шаг
    x := x + h;
  until x > b; // Проверка условия завершения цикла

end.
